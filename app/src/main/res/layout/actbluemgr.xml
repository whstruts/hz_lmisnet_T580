<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/clrlistback" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="1300dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/clrlistheadback" >

            <TextView
                android:id="@+id/tv_qyts"
                android:layout_width="605dp"
                android:layout_height="40dp"
                android:background="@drawable/clsbar"
                android:gravity="center"
                android:text="蓝牙信息"
                android:textColor="#6959CD"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_pdts"
                android:layout_width="658dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbar"
                android:gravity="center"
                android:text="条码信息"
                android:textColor="#6959CD"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_operbutton"
            android:layout_width="1300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <Button
                android:id="@+id/bt_blueCheck"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="1020dp"
                android:background="@drawable/clsbtnselect"
                android:gravity="center"
                android:text="蓝牙搜索"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bt_Return"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:gravity="center"
                android:text="返回"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="605dp"
            android:layout_height="580dp"
            android:layout_above="@+id/textView1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/clrlistback"
            android:cacheColorHint="#F0F8FF"
            android:scrollbars="none" >
        </ListView>
    <LinearLayout
          android:id="@+id/LinearLayoutts"
          android:layout_width="1270dp"
          android:layout_height="35dp"
          android:layout_alignParentLeft="true"  
          android:layout_marginTop="5dp" 
          android:layout_marginLeft="5dp"       
          android:layout_below="@+id/listView1"         
          android:background="@drawable/clrlistheadback" >
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_above="@id/rl_operbutton"
            android:gravity="left"
            android:text="温馨提示:"
            android:textColor="#6959CD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_ts"
            android:layout_width="900dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:text="您正在处理蓝牙设备"
            android:textColor="#6959CD"
            android:textSize="20dp" />
	</LinearLayout>
        <ListView
            android:id="@+id/listView2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignBottom="@+id/listView1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/listView1"
            android:background="@drawable/clrlistback"
            android:cacheColorHint="#F0F8FF"
            android:scrollbars="none" >

        </ListView>
    </RelativeLayout>

</LinearLayout>